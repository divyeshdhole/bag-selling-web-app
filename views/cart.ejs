<%- include('./partials/header') %>

<div class="w-full h-screen flex flex-col items-start px-20 py-20 gap-10">
    <% user.cart.forEach(function(product) { %>
    <!-- Left Section (Product Details) -->
    <div class="w-full flex gap-10">
        <div class="w-[30%] rounded-md overflow-hidden bg-white shadow-lg">
            <div class="w-full h-80 bg-[<%= product.bgcolor %>]-500 flex items-center justify-center">
                <% if (product.image) { %>
                    <img class="h-[12rem] object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image">
                <% } else { %>
                    <div class="text-gray-600 text-center">
                        No Image Available
                    </div>
                <% } %>
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor%>]">
                <h3 class="text-2xl font-semibold text-[<%= product.textcolor %>]"><%= product.name %></h3>
                <div class="flex items-center gap-2">
                    <button class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center focus:outline-none">
                        <i class="ri-add-line text-gray-600"></i>
                    </button>
                    <div class="px-2 py-1 rounded-md bg-gray-200 text-gray-700">01</div>
                    <button class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center focus:outline-none">
                        <i class="ri-subtract-line text-gray-600"></i>
                    </button>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-gray-100">
                <h4 class="text-lg text-gray-700">Net Total</h4>
                <h2 class="text-lg font-semibold text-green-600">₹ <%= product.price %></h2>
            </div>
        </div>

        <!-- Right Section (Price Breakdown) -->
        <div class="w-[70%] bg-white rounded-md shadow-lg">
            <h3 class="text-xl font-semibold px-6 py-4 bg-gray-200">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3 text-gray-700">Total MRP</h4>
                    <h4 class="text-gray-700">₹ <%= product.price %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 text-gray-700">Discount on MRP</h4>
                    <h4 class="text-gray-700">₹ <%= product.discount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 text-gray-700">Platform Fee</h4>
                    <h4 class="text-gray-700">₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3 text-gray-700">Shipping Fee</h4>
                    <h4 class="text-gray-700">FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-gray-200 mt-10"></div>
            <div class="flex mt-5 px-10">
                <h3 class="w-1/3 text-xl font-semibold">Total Amount</h3>
                <h3 class="text-xl font-semibold text-green-600">₹ <%= product.price + 20 - product.discount %></h3>
            </div>
            <!-- <form action="/checkout/<%= product._id %>" method="POST" class="px-10 py-4">
                <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-md">Checkout</button> -->
            </form>
        </div>
    </div>
    <% }) %>
</div>

<%- include('./partials/footer') %>
